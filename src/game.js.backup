// ============================================
// 文字人生 - Text Life Game Engine
// ============================================

class TextLifeGame {
    constructor() {
        this.character = null;
        this.gameState = 'menu'; // menu, playing, dead
        this.currentEvent = null;
        this.eventHistory = [];
        this.recentEvents = []; // 最近触发的事件ID，防止重复
        this.recentNarratives = []; // 最近触发的旁白文本，防止重复

        // 动态随机系统
        this.randomnessState = {
            narrativeBaseChance: 0.3,      // 旁白基础概率
            luckyStreakCount: 0,            // 连续幸运次数
            unluckyStreakCount: 0,          // 连续不幸次数
            lastEventDifficulty: 0.5,       // 上一个事件的难度
            totalEventsCount: 0,            // 总事件计数
            consecutiveSurvival: 0,         // 连续存活次数
            worldChaosLevel: 0.5           // 世界混乱度（0-1）
        };

        // DOM 元素
        this.outputEl = document.getElementById('output');
        this.choicesEl = document.getElementById('choices');
        this.ageEl = document.getElementById('age');
        this.healthEl = document.getElementById('health');
        this.intelligenceEl = document.getElementById('intelligence');
        this.luckEl = document.getElementById('luck');
        this.highscoreListEl = document.getElementById('highscore-list');

        this.init();
    }

    init() {
        this.loadHighscores();
        this.showStartScreen();
    }

    // ============================================
    // 动态随机系统 - 核心概率计算引擎
    // ============================================

    // 计算当前旁白事件触发概率（使用配置文件，受年龄段影响）
    calculateNarrativeChance() {
        // 使用配置文件中的年龄段特定概率
        let chance = GameConfig.getNarrativeChance(this.character.age);

        // 连续存活影响：活得越久，越容易触发跳跃
        const survivalBonus = Math.min(this.randomnessState.consecutiveSurvival * 0.003, 0.05);
        chance += survivalBonus;

        // 健康影响：健康低容易触发事件变化
        if (this.character.attributes.health < 30) {
            chance += 0.04;
        }

        // 世界混乱度影响
        chance += this.randomnessState.worldChaosLevel * 0.08 - 0.04;

        // 随机波动
        chance += (Math.random() - 0.5) * 0.08;

        return Math.max(0.02, Math.min(0.25, chance)); // 限制在2%-25%
    }

    // 动态计算年龄跳跃幅度（根据当前年龄决定）
    calculateDynamicAgeJump(currentAge) {
        let minJump, maxJump;

        if (currentAge <= 6) {
            // 婴幼儿期：1-3年
            minJump = 1;
            maxJump = 3;
        } else if (currentAge <= 18) {
            // 少年期：2-8年
            minJump = 2;
            maxJump = 8;
        } else if (currentAge <= 35) {
            // 青年期：5-15年
            minJump = 5;
            maxJump = 15;
        } else if (currentAge <= 60) {
            // 中年期：3-10年
            minJump = 3;
            maxJump = 10;
        } else {
            // 老年期：1-5年（减少跳跃，体验晚年）
            minJump = 1;
            maxJump = 5;
        }

        // 随机选择跳跃年数
        return Math.floor(Math.random() * (maxJump - minJump + 1)) + minJump;
    }

    // 计算存活概率（动态修正）
    calculateSurviveChance(baseChance) {
        let chance = baseChance;

        // 运气影响（最关键的因素）
        const luckBonus = (this.character.attributes.luck - 50) / 200; // -0.25 to +0.25
        chance += luckBonus;

        // 智力影响（聪明人能规避风险）
        const intelligenceBonus = (this.character.attributes.intelligence - 50) / 300; // -0.17 to +0.17
        chance += intelligenceBonus;

        // 健康影响（身体好抗风险能力强）
        const healthBonus = (this.character.attributes.health - 50) / 400; // -0.125 to +0.125
        chance += healthBonus;

        // 连续幸运/不幸影响（物极必反）
        if (this.randomnessState.luckyStreakCount > 3) {
            chance -= 0.1; // 好运用尽，降低存活率
        }
        if (this.randomnessState.unluckyStreakCount > 2) {
            chance += 0.15; // 否极泰来，提高存活率
        }

        // 世界混乱度影响
        chance -= this.randomnessState.worldChaosLevel * 0.15;

        // 年龄影响：年轻人抗风险，老年人脆弱
        if (this.character.age < 20) {
            chance += 0.05;
        } else if (this.character.age > 60) {
            chance -= 0.05;
        } else if (this.character.age > 80) {
            chance -= 0.15;
        }

        // 随机波动 ±15%
        chance += (Math.random() - 0.5) * 0.3;

        return Math.max(0.05, Math.min(0.95, chance)); // 限制在5%-95%
    }

    // 计算属性变化量（动态范围 + 可能反转方向）
    calculateAttributeChange(baseChange, attributeName = '', choiceOrNarrative = null) {
        if (!baseChange) return baseChange;

        // 基础波动 ±30%
        const randomFactor = 0.7 + Math.random() * 0.6; // 0.7 to 1.3
        let actualChange = Math.round(baseChange * randomFactor);

        // 世界混乱度影响：混乱度高，属性变化更剧烈
        const chaosMultiplier = 1 + (this.randomnessState.worldChaosLevel - 0.5) * 0.4;
        actualChange = Math.round(actualChange * chaosMultiplier);

        // 【荒诞反转】世界混乱度越高，越可能发生方向反转
        const reversalChance = (this.randomnessState.worldChaosLevel - 0.5) * 0.3; // -15% to +15%
        const baseReversalChance = 0.15; // 基础15%反转概率
        const finalReversalChance = baseReversalChance + reversalChance;

        if (Math.random() < finalReversalChance) {
            // 发生反转！正变负，负变正
            actualChange = -actualChange;
            this.reversalReason = this.generateReversalReason(attributeName, baseChange, actualChange, choiceOrNarrative);
        } else {
            this.reversalReason = null;
        }

        // 极端事件：5%概率翻倍或减半
        const extremeRoll = Math.random();
        if (extremeRoll < 0.025) {
            actualChange *= 2; // 2.5%概率翻倍
        } else if (extremeRoll < 0.05) {
            actualChange = Math.round(actualChange / 2); // 2.5%概率减半
        }

        return actualChange;
    }

    // 生成荒诞的反转原因（只在负向反转时显示）
    generateReversalReason(attributeName, expectedChange, actualChange, choiceOrNarrative = null) {
        // 判断是否为负向反转（本该增加却减少）
        const wasPositive = expectedChange > 0;
        const isNegativeReversal = wasPositive && actualChange < 0;

        // 如果是正向反转（本该减少却增加），直接不显示原因
        if (!isNegativeReversal) {
            return null;
        }

        // 使用事件中自定义的反转原因
        if (choiceOrNarrative && choiceOrNarrative.reversalReasons && choiceOrNarrative.reversalReasons[attributeName]) {
            return choiceOrNarrative.reversalReasons[attributeName];
        }

        // 如果事件没有定义反转原因，返回 null（不显示）
        return null;
    }

    // 更新随机状态（每次事件后调用）
    updateRandomnessState(survived, wasLucky) {
        this.randomnessState.totalEventsCount++;

        // 更新连续状态
        if (survived) {
            this.randomnessState.consecutiveSurvival++;
            if (wasLucky) {
                this.randomnessState.luckyStreakCount++;
                this.randomnessState.unluckyStreakCount = 0;
            } else {
                this.randomnessState.luckyStreakCount = 0;
            }
        } else {
            this.randomnessState.consecutiveSurvival = 0;
            this.randomnessState.unluckyStreakCount++;
        }

        // 世界混乱度随机游走（每次事件后微调）
        this.randomnessState.worldChaosLevel += (Math.random() - 0.5) * 0.1;
        this.randomnessState.worldChaosLevel = Math.max(0.2, Math.min(0.8, this.randomnessState.worldChaosLevel));

        // 每10个事件，混乱度大幅波动一次
        if (this.randomnessState.totalEventsCount % 10 === 0) {
            this.randomnessState.worldChaosLevel += (Math.random() - 0.5) * 0.4;
            this.randomnessState.worldChaosLevel = Math.max(0.2, Math.min(0.8, this.randomnessState.worldChaosLevel));
        }
    }

    // 计算事件权重（某些事件更容易出现）
    calculateEventWeight(event) {
        let weight = 1.0;

        // 根据事件难度调整权重
        const hasDeathChoice = event.choices.some(c => c.result === 'death' || (c.result === 'random' && c.surviveChance < 0.6));
        if (hasDeathChoice) {
            // 危险事件：连续存活越多，越容易出现
            weight += this.randomnessState.consecutiveSurvival * 0.05;
            // 但是如果最近很不幸，降低危险事件概率
            weight -= this.randomnessState.unluckyStreakCount * 0.1;
        }

        // 智力高的人更少遇到低智商事件
        if (event.id.includes('baby') && this.character.attributes.intelligence > 70) {
            weight *= 0.5;
        }

        // 运气影响事件分布
        weight += (this.character.attributes.luck - 50) / 100; // ±0.5

        // 随机波动
        weight *= (0.7 + Math.random() * 0.6); // 0.7 to 1.3

        return Math.max(0.1, weight);
    }

