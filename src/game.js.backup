    // ============================================
    // 角色生成
    // ============================================
    generateCharacter() {
        const genders = ['男', '女'];
        const gender = genders[Math.floor(Math.random() * genders.length)];
        const backgrounds = [
            '富豪家庭', '普通家庭', '贫困家庭', '单亲家庭',
            '孤儿', '书香门第', '农民家庭', '商人家庭'
        ];

        this.character = {
            name: this.generateRandomName(gender),
            gender: gender,
            age: 0,
            maxAge: 122,
            background: backgrounds[Math.floor(Math.random() * backgrounds.length)],
            attributes: {
                health: 20 + Math.floor(Math.random() * 31),      // 20-50
                intelligence: 20 + Math.floor(Math.random() * 31), // 20-50
                luck: 20 + Math.floor(Math.random() * 31),        // 20-50
                charm: 20 + Math.floor(Math.random() * 31)        // 20-50
            },
            isAlive: true
        };

        // 根据出生背景调整属性
        switch(this.character.background) {
            case '富豪家庭':
                this.character.attributes.health += 10;
                this.character.attributes.charm += 10;
                break;
            case '贫困家庭':
                this.character.attributes.health -= 10;
                this.character.attributes.luck -= 10;
                break;
            case '书香门第':
                this.character.attributes.intelligence += 15;
                break;
            case '孤儿':
                this.character.attributes.luck -= 15;
                this.character.attributes.health -= 10;
                break;
        }

        // 确保属性在1-100范围内
        for (let key in this.character.attributes) {
            this.character.attributes[key] = Math.max(1, Math.min(100, this.character.attributes[key]));
        }
    }

    // ============================================
    // UI 更新
    // ============================================
    updateStats() {
        this.ageEl.textContent = `年龄: ${this.character.age}`;
        this.healthEl.textContent = `健康: ${this.character.attributes.health}`;
        this.intelligenceEl.textContent = `智力: ${this.character.attributes.intelligence}`;
        this.luckEl.textContent = `运气: ${this.character.attributes.luck}`;
    }

    addMessage(text, type = 'normal') {
        const messageEl = document.createElement('div');
        messageEl.className = `message ${type}`;
        messageEl.textContent = text;
        this.outputEl.appendChild(messageEl);
        this.scrollToBottom();
    }

    scrollToBottom() {
        const container = document.getElementById('game-container');
        container.scrollTop = container.scrollHeight;
    }

    clearChoices() {
        this.choicesEl.innerHTML = '';
    }

    clearOutput() {
        this.outputEl.innerHTML = '';
    }

    // ============================================
    // 开始屏幕
    // ============================================
    showStartScreen() {
        this.clearOutput();
        this.clearChoices();

        this.addMessage('█████████████████████████████████████████', 'system');
        this.addMessage('█                                       █', 'system');
        this.addMessage('█      欢迎来到【文字人生】游戏        █', 'system');
        this.addMessage('█                                       █', 'system');
        this.addMessage('█  在这个世界里，生活充满了意外...    █', 'system');
        this.addMessage('█  每个选择都可能改变你的命运         █', 'system');
        this.addMessage('█  有些死亡方式你绝对想不到           █', 'system');
        this.addMessage('█                                       █', 'system');
        this.addMessage('█  目标：活得越久越好（最高122岁）    █', 'system');
        this.addMessage('█                                       █', 'system');
