    // ============================================
    // 游戏流程
    // ============================================
    startNewGame() {
        this.generateCharacter();
        this.gameState = 'playing';
        this.eventHistory = [];
        this.recentEvents = []; // 重置最近事件列表

        this.clearOutput();
        this.clearChoices();

        this.addMessage('═════════════════════════════════════', 'system');
        this.addMessage(`▸ 系统正在生成随机人生...`, 'system');

        setTimeout(() => {
            this.addMessage(`▸ 姓名: ${this.character.name}`, 'system');
            this.addMessage(`▸ 性别: ${this.character.gender}`, 'system');
            this.addMessage(`▸ 出生背景: ${this.character.background}`, 'system');
            this.addMessage(`▸ 初始健康: ${this.character.attributes.health}`, 'system');
            this.addMessage(`▸ 初始智力: ${this.character.attributes.intelligence}`, 'system');
            this.addMessage(`▸ 初始运气: ${this.character.attributes.luck}`, 'system');
            this.addMessage(`▸ 初始魅力: ${this.character.attributes.charm}`, 'system');
            this.addMessage('═════════════════════════════════════', 'system');
            this.addMessage('', 'system');
            this.addMessage('你的人生开始了...', 'event');
            this.addMessage('', 'system');

            this.updateStats();

            setTimeout(() => {
                this.triggerRandomEvent();
            }, 1000);
        }, 1000);
    }

    // ============================================
    // 事件触发
    // ============================================
    triggerRandomEvent() {
        if (!this.character.isAlive) return;

        // 【超级彩蛋】游戏自我关闭（极低概率：0.5%）
        if (Math.random() < 0.005) {
            this.triggerGameShutdownEasterEgg();
            return;
        }

        // 【动态概率】旁白事件触发概率
        const narrativeChance = this.calculateNarrativeChance();
        if (Math.random() < narrativeChance) {
            this.triggerNarrativeEvent();
            return;
        }

        // 【固定概率】突发死亡事件（模拟人生不确定性）
        const suddenDeathChance = 0.03; // 固定3%概率
        if (Math.random() < suddenDeathChance) {
            this.triggerSuddenDeath();
            return;
        }

        // 获取符合当前年龄的事件（排除最近触发过的）
        let availableEvents = gameEvents.filter(event => {
            const ageMatch = event.ageRange[0] <= this.character.age &&
                           this.character.age <= event.ageRange[1];
            const notRecent = !this.recentEvents.includes(event.id);
            return ageMatch && notRecent;
        });

        if (availableEvents.length === 0) {
            // 如果没有事件了，清空最近事件列表，或者结束游戏
            if (this.character.age > 100) {
                this.addMessage(`你活到了 ${this.character.age} 岁，创造了人生奇迹！`, 'success');
                this.endGame();
                return;
            }
            this.recentEvents = []; // 清空，让事件可以重复
            this.triggerRandomEvent(); // 重新触发
            return;
        }

        // 【动态权重】为每个事件计算权重，然后加权随机选择
        const weightedEvents = availableEvents.map(event => ({
            event: event,
            weight: this.calculateEventWeight(event)
        }));

        // 计算总权重
        const totalWeight = weightedEvents.reduce((sum, we) => sum + we.weight, 0);

        // 加权随机选择
        let random = Math.random() * totalWeight;
        let event = null;
        for (const we of weightedEvents) {
            random -= we.weight;
            if (random <= 0) {
                event = we.event;
                break;
            }
        }

        // 兜底：如果没选中，取第一个
        if (!event) {
            event = weightedEvents[0].event;
        }
        this.currentEvent = event;

        // 记录到最近事件列表（最多保留5个）
        this.recentEvents.push(event.id);
        if (this.recentEvents.length > 5) {
            this.recentEvents.shift();
        }

        // 显示事件
        this.addMessage(`【${this.character.age}岁】`, 'system');
        this.addMessage(event.description, 'event');
        this.addMessage('', 'normal');

        // 显示选项
        this.showChoices(event);
    }

