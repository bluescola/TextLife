    // ============================================
    // 显示选项
    // ============================================
    showChoices(event) {
        this.clearChoices();

        event.choices.forEach((choice, index) => {
            const btn = document.createElement('button');
            btn.className = 'choice-button';
            btn.textContent = choice.text;
            btn.onclick = () => this.makeChoice(choice);
            this.choicesEl.appendChild(btn);
        });
    }

    // ============================================
    // 做出选择
    // ============================================
    makeChoice(choice) {
        this.clearChoices();

        this.addMessage(`你选择了: ${choice.text}`, 'system');
        this.addMessage('', 'normal');

        // 计算结果（受属性影响）
        const result = this.calculateResult(choice);

        if (result.death) {
            // 死亡
            this.addMessage(choice.deathCause || '你因为这个选择而死去。', 'death');
            this.addMessage('', 'death');
            this.addMessage(`▸ 死因: ${choice.deathReason || '选择失误'}`, 'death');
            this.addMessage(`▸ 享年: ${this.character.age}岁`, 'death');

            this.character.isAlive = false;
            this.endGame();
        } else {
            // 存活
            this.addMessage(choice.successMessage || '你成功度过了这次危机。', 'success');

            // 【动态属性变化】应用属性变化
            if (choice.attributeChange) {
                for (let attr in choice.attributeChange) {
                    const baseChange = choice.attributeChange[attr];
                    const actualChange = this.calculateAttributeChange(baseChange, attr, choice);

                    // 检测是否发生了反转
                    const didReverse = (baseChange > 0 && actualChange < 0) || (baseChange < 0 && actualChange > 0);

                    // 如果发生反转，先显示荒诞原因
                    if (didReverse && this.reversalReason) {
                        this.addMessage(`  ${this.reversalReason}`, 'event');
                    }

                    this.character.attributes[attr] += actualChange;
                    this.character.attributes[attr] = Math.max(1, Math.min(100, this.character.attributes[attr]));

                    if (actualChange > 0) {
                        this.addMessage(`▸ ${attr} +${actualChange}`, 'success');
                    } else if (actualChange < 0) {
                        this.addMessage(`▸ ${attr} ${actualChange}`, 'event');
                    }
                }
            }

            // 【动态年龄跳跃】使用配置文件中的年龄跳跃规则
            const ageIncrease = choice.ageChange || GameConfig.getAgeJump(this.character.age);
            this.character.age += ageIncrease;

            // 显示年龄增长
            if (ageIncrease > 1) {
                this.addMessage(`时间流逝... +${ageIncrease}岁`, 'system');
            }

            this.updateStats();

            // 检查健康值
            if (this.character.attributes.health <= 0) {
                this.addMessage('', 'death');
                this.addMessage('你的健康值归零，身体崩溃而死。', 'death');
                this.addMessage(`▸ 享年: ${this.character.age}岁`, 'death');
                this.character.isAlive = false;
                this.endGame();
                return;
            }

            this.addMessage('', 'normal');

            // 继续下一个事件
            setTimeout(() => {
                this.triggerRandomEvent();
            }, 1500);
        }
    }

    // ============================================
    // 计算结果（受属性+随机性影响）
    // ============================================
    calculateResult(choice) {
        // 固定存活
        if (choice.result === 'survive') {
            this.updateRandomnessState(true, false);
            return { death: false, wasLucky: false };
        }

        // 固定死亡（但高运气可以逃脱）
        if (choice.result === 'death') {
            // 【动态概率】逃脱概率
            let escapeChance = this.character.attributes.luck / 100 * 0.3; // 基础最高30%
            escapeChance += this.randomnessState.unluckyStreakCount * 0.05; // 连续倒霉后增加逃脱机会

            const luckySurvive = Math.random() < escapeChance;
            if (luckySurvive) {
                this.addMessage('[幸运女神眷顾] 你靠着运气躲过一劫！', 'success');
                this.updateRandomnessState(true, true);
                return { death: false, wasLucky: true };
            }
            this.updateRandomnessState(false, false);
            return { death: true, wasLucky: false };
        }

        // 【动态概率】随机结果 - 使用复杂的动态计算
        if (choice.result === 'random') {
            const baseChance = choice.surviveChance || 0.5;
            const finalChance = this.calculateSurviveChance(baseChance);

            const survived = Math.random() < finalChance;
            const wasLucky = survived && finalChance < 0.5; // 低于50%还活了就算幸运

            this.updateRandomnessState(survived, wasLucky);
            return { death: !survived, wasLucky: wasLucky };
        }

        this.updateRandomnessState(true, false);
        return { death: false, wasLucky: false };
    }

    // ============================================
    // 游戏结束
    // ============================================
    endGame() {
        this.gameState = 'dead';
        this.saveHighscore();

        this.addMessage('═════════════════════════════════════', 'system');
        this.addMessage('游戏结束', 'death');
        this.addMessage('═════════════════════════════════════', 'system');

        const restartBtn = document.createElement('button');
        restartBtn.className = 'start-button';
        restartBtn.textContent = '█ 再来一次 █';
        restartBtn.onclick = () => this.startNewGame();
        this.choicesEl.appendChild(restartBtn);

        const menuBtn = document.createElement('button');
        menuBtn.className = 'start-button';
        menuBtn.textContent = '█ 返回主菜单 █';
        menuBtn.onclick = () => this.showStartScreen();
        this.choicesEl.appendChild(menuBtn);
    }

    // ============================================
    // 排行榜系统
    // ============================================
    saveHighscore() {
        const highscores = this.loadHighscores();

        const newScore = {
            name: this.character.name,
            age: this.character.age,
            background: this.character.background,
            timestamp: Date.now()
        };

        highscores.push(newScore);
        highscores.sort((a, b) => b.age - a.age);

        // 只保留前3名
        const top3 = highscores.slice(0, 3);
        localStorage.setItem('textlife_highscores', JSON.stringify(top3));

        this.displayHighscores();
    }

    loadHighscores() {
        const data = localStorage.getItem('textlife_highscores');
        return data ? JSON.parse(data) : [];
    }

    displayHighscores() {
        const highscores = this.loadHighscores();
        this.highscoreListEl.innerHTML = '';

        if (highscores.length === 0) {
            this.highscoreListEl.innerHTML = '<div class="highscore-item">暂无记录</div>';
            return;
        }

        highscores.forEach((score, index) => {
            const item = document.createElement('div');
            item.className = 'highscore-item';
            item.textContent = `#${index + 1} ${score.name} - ${score.age}岁 (${score.background})`;
            this.highscoreListEl.appendChild(item);
        });
    }
}

