        // 根据当前年龄筛选合适的旁白
        // 重要：只选择当前年龄在年龄范围内的旁白，并且年龄范围的下限要合理
        let suitableNarratives = narratives.filter(n => {
            const inRange = this.character.age >= n.ageRange[0] && this.character.age <= n.ageRange[1];
            // 如果当前年龄超过下限3岁以上，避免选择那些描述早期事件的旁白
            const notTooEarly = this.character.age < n.ageRange[0] + 3 || n.ageRange[0] >= 7;
            return inRange && notTooEarly;
        });

        // 排除最近出现过的旁白（防止重复）
        const unrecentNarratives = suitableNarratives.filter(n =>
            !this.recentNarratives.includes(n.text)
        );

        // 如果还有未使用的旁白，优先使用；否则使用全部合适的旁白
        if (unrecentNarratives.length > 0) {
            suitableNarratives = unrecentNarratives;
        }

        // 如果没有合适的旁白，使用通用的
        let narrative;
        if (suitableNarratives.length === 0) {
            narrative = {
                text: '时光匆匆，岁月如梭。你在平静中度过了这段时光。',
                ageJump: 2,
                attributeChange: { intelligence: 3 },
                reversalReasons: {
                    intelligence: '但过度专注反而钻牛角尖'
                },
                death: false
            };
        } else {
            narrative = suitableNarratives[Math.floor(Math.random() * suitableNarratives.length)];
        }

        // 【动态年龄跳跃】使用配置文件中的年龄跳跃规则
        narrative.ageJump = GameConfig.getAgeJump(this.character.age);

        // 记录到最近旁白列表（最多保留7个，比选项事件多一点）
        this.recentNarratives.push(narrative.text);
        if (this.recentNarratives.length > 7) {
            this.recentNarratives.shift();
        }

        this.addMessage(`【${this.character.age}岁】`, 'system');
        this.addMessage(`━━━━━ 时光流转 ━━━━━`, 'event');
        this.addMessage(narrative.text, 'event');

        // 判断是否死亡（死亡类事件有概率判定）
        if (narrative.death) {
            const deathChance = narrative.deathChance || 0.5;
            const luckyBonus = (this.character.attributes.luck - 50) / 200;
            const finalChance = deathChance - luckyBonus;

            if (Math.random() < finalChance) {
                // 死亡
                this.character.age += narrative.ageJump;
                this.addMessage('', 'death');
                this.addMessage(`▸ 死因: ${narrative.deathReason}`, 'death');
                this.addMessage(`▸ 享年: ${this.character.age}岁`, 'death');
                this.character.isAlive = false;
                this.endGame();
                return;
            } else {
                // 幸运逃脱
                this.addMessage('[奇迹发生] 虽然很离谱，但你居然活下来了！', 'success');
                this.addMessage('你获得了"死里逃生"称号，运气+20！', 'success');
                if (narrative.attributeChange) {
                    narrative.attributeChange.luck = (narrative.attributeChange.luck || 0) + 20;
                } else {
                    narrative.attributeChange = { luck: 20 };
                }
            }
        }

        // 【动态属性变化】应用属性变化
        if (narrative.attributeChange) {
            for (let attr in narrative.attributeChange) {
                const baseChange = narrative.attributeChange[attr];
                const actualChange = this.calculateAttributeChange(baseChange, attr, narrative);

                // 检测是否发生了反转
                const didReverse = (baseChange > 0 && actualChange < 0) || (baseChange < 0 && actualChange > 0);

                // 如果发生反转，先显示荒诞原因
                if (didReverse && this.reversalReason) {
                    this.addMessage(`  ${this.reversalReason}`, 'event');
                }

                this.character.attributes[attr] += actualChange;
                this.character.attributes[attr] = Math.max(1, Math.min(100, this.character.attributes[attr]));

                if (actualChange > 0) {
                    this.addMessage(`▸ ${attr} +${actualChange}`, 'success');
                } else if (actualChange < 0) {
                    this.addMessage(`▸ ${attr} ${actualChange}`, 'event');
                }
            }
        }

        // 跳过年龄
        this.character.age += narrative.ageJump;
        this.addMessage(``, 'normal');
        this.addMessage(`━━━ 转眼间，你已经 ${this.character.age} 岁了 ━━━`, 'system');

        this.updateStats();

        // 检查健康值
        if (this.character.attributes.health <= 0) {
            this.addMessage('', 'death');
            this.addMessage('你的健康值归零，身体崩溃而死。', 'death');
            this.addMessage(`▸ 享年: ${this.character.age}岁`, 'death');
            this.character.isAlive = false;
            this.endGame();
            return;
        }

        this.addMessage('', 'normal');

        // 继续下一个事件
        setTimeout(() => {
            this.triggerRandomEvent();
        }, 1500);
    }

